<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fot="clr-namespace:KOGA.FOT.MAUI;assembly=KOGA.FOT.MAUI"
             x:Class="MauiUsbDemo.MainPage" 
             Loaded="ContentPage_Loaded" Unloaded="ContentPage_Unloaded">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <fot:RawImageView x:Name="fotImg0" WidthRequest="1080" HeightRequest="54" />
            <fot:RawImageView x:Name="fotImg1" WidthRequest="1080" HeightRequest="54" />

            <Button
                x:Name="CounterBtn"
                Text="SetFeature Test" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="CounterBtn_Clicked"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
