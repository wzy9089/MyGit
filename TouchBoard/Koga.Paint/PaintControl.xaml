<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:local="clr-namespace:Koga.Paint"
             x:Class="Koga.Paint.PaintControl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <skia:SKCanvasView x:Name="backgroundLayer" PaintSurface="backgroundLayer_PaintSurface"/>
        <local:PageView x:Name="pageView"/>
        <local:TouchPaintingView x:Name="paintView" StrokeCreated="paintView_StrokeCreated"/>
    </Grid>
</ContentView>
